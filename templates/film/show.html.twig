{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="flex flex-col justify-center items-center">
        <section class="flex flex-col justify-center items-center p-6 gap-6 w-10/12">
            <section class="flex flex-col justify-center items-center p-6 gap-6 w-10/12">
                <h1 id="title" class="text-center font-extrabold text-4xl">{{ film.title }}</h1>

                <span class="whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-0.5 text-sm text-purple-700">{{ film.category.name }}</span>

                <div class="divider"></div>

                <article class="p-6 leading-8 w-9/12">
                    <p>{{ film.summary }}</p>
                </article>
            </section>
    </div>
{% endblock %}
