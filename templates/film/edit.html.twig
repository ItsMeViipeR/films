{% extends "base.html.twig" %}

{% block title %}Editer un film{% endblock %}

{% block body %}
    <div class="mt-10 max-w-md mx-auto">
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="mt-6 inline-block w-full bg-indigo-500 hover:bg-indigo-600 text-white rounded shadow p-4" formnovalidate>Send</button>
        {{ form_end(form) }}

        <form action="{{ path('film_delete', {id: film.id}) }}" method="post" class="flex mt-6 justify-center">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ film.id) }}" />
            <button type="submit" class="btn btn-error">Supprimer</button>

            <input type="hidden" name="_token" />
        </form>
    </div>
{% endblock %}